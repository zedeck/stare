@model mie.era.mvc.Models.RefereeEdit

<form method="POST" action="SaveReferee" class="row-g3 needs-validation" enctype="multipart/form-data">
    <div class="row my-4">
        <div class="col-md-12">
            <div class="form-floating">
                <input type="hidden" id="RefereeIdControl" name="RefereeId" class="form-control readonly"
                       value="@Model.RefereeId" required />
            </div>

            <div class="form-floating">

                <input type="text" id="RefereeFirstNameControl" name="Name" class="form-control"
                       value="@Model.Name" required />
                <label class="form-label" for="RefereeFirstNameControl">Referee First name</label>
                <div class="invalid-feedback">
                    Please provide a valid first name.
                </div>
            </div>
            <br>
            <div class="form-floating">

                <input type="text" id="RefereeEmailControl" name="Email" class="form-control"
                       value="@Model.Email" required />
                <label class="form-label" for="RefereeEmailControl">Email</label>
                <div class="invalid-feedback">
                    Please provide a valid email.
                </div>
            </div>
            <br>
            <div class="form-floating">

                <input type="text" id="RefereePhoneControl" name="PhoneNumber" class="form-control"
                       value="@Model.PhoneNumber" required />
                <label class="form-label" for="RefereePhoneControl">Phone Number</label>
                <div class="invalid-feedback">
                    Please provide a valid first name.
                </div>
            </div>
            <br>
            <div class="form-floating">
                <input type="text" id="RefereeRelControl" name="Relationship" class="form-control"
                       value="@Model.RelationShip" required />
                <label class="form-label" for="RefereeRelControl">Relationship with Candidate</label>
                <div class="invalid-feedback">
                    Please provide a valid first name.
                </div>
            </div>
            <br>
            <div class="form-floating">
                <div class="form-check">
                    <label class="form-check-label">Is Active 
                        <input class="form-check-input" asp-for="IsActive" />
                    </label>
                </div>
            </div>
            <br>

            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>

